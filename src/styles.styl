.card
  height 280px
  padding 5px
  position relative

  &-background
    position relative
    background-color #9d9d9d
    width 100%
    height 100%
    overflow hidden

    &-overlay
      position absolute
      width 100%
      height 100%
      background-color #000
      opacity 0.1
      transition opacity 0.5s

    &-image
      position absolute
      width 100%
      height 100%
      background-size cover
      background-position center
      transition transform 0.5s

  &:hover
    // see https://github.com/stevelacy/gulp-stylus/issues/154
    .card-background-overlay
      opacity 0.3
    .card-background-image
      transform scale(1.05)

  &-info
    position absolute
    z-index 100
    left 10px
    bottom 1px

    &-title
      font-size 20px

      &-icon
        border-radius 4px

      &-text
        margin-left 5px
        padding 2px 5px
        background-color rgba(255, 255, 255, 0.7)
        color #000

    &-description
      background-color rgba(255, 255, 255, 0.7)
      padding 2px 5px

  &:hover
    .card-controls
      opacity 1

  &-controls
    position absolute
    top 10px
    left 10px
    width 100%
    opacity 0

    .btn
      border none
      border-radius 0